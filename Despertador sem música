#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

int main()
{   int hora, minuto, segundo;
    int Ahora, Amin, Aseg;
    printf("Digite a hora de despertar \n");
    scanf("%d", &Ahora);
    printf("Digite o minuto de despertar \n");
    scanf("%d", &Amin);
    printf("Digite o segundo de despertar \n");
    scanf("%d", &Aseg);
    hora=minuto=segundo=0;

    printf("\n\n\n\n\n\n\n\n");
    printf("Rel√≥gio");

Loop:
   printf("\r     hora:%dh %dm %ds", hora, minuto, segundo);
    segundo++;

    if(segundo==60)
        {
            segundo=0;
            minuto++;
        }
    if(minuto==60)
        {
            minuto=0;
            hora++;
        }
    if (hora==24)
        {
            hora=0;
        }
        Sleep(1000);
    if(Ahora == hora && Amin == minuto && Aseg == segundo) {
        printf(" \n \n \n Acorda Vagabundo");
        goto fim ;
        }
goto Loop;
fim:

 return(0);
    }
